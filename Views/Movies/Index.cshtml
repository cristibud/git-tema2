    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titlu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.regia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.distributia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataPremiera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nrBilete)
