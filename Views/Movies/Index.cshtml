            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titlu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.regia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.distributia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataPremiera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nrBilete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataFinal)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
